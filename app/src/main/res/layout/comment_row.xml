<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:id="@+id/cCommentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/cPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="150dp"
            android:src="@drawable/blank_wanted_poster"
            android:clickable="true"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/invisiblePK"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            />

        <LinearLayout
            android:id="@+id/cAboutComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/cPoster"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cRusName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cRusName"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cEngName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(" />

                <TextView
                    android:id="@+id/cYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=")" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey1" />

            <TextView
                android:id="@+id/invisibleTV"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/cTitleRus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <View

    android:id="@+id/line2"
    android:layout_width="fill_parent"
    android:layout_height="1px"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    android:background="@color/grey1"/>

    <RelativeLayout
        android:id="@+id/cUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/cAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:src="@drawable/av2" />

        <LinearLayout
            android:id="@+id/cAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/cAvatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/vova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cAvatar"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/cAbout">

            <TextView
                android:id="@+id/cDislikeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/cDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@id/cDislikeNum"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:onClick="onClick"
                android:src="@drawable/ic_dislike" />

            <TextView
                android:id="@+id/cLikeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/cDislike"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/cLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/cLikeNum"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:onClick="onClick"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/cCommentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/cLike"
                android:text="00"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/cComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cLike"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/cCommentNum"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="38dp"
                android:maxWidth="38dp"
                android:src="@drawable/ic_comment2" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>