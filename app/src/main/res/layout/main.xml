<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fRL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/twRusName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello World, MyActivity"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/twEngName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/twRusName"
            android:textSize="@dimen/font_size" />

        <ImageView
            android:id="@+id/fBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/bookmark48"
            android:tint="#ffffff"/>

        <ImageView
            android:id="@+id/fHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fBookmark"
            android:clickable="true"
            android:src="@drawable/favorite22"
            android:tint="#ffffff"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fRL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:maxWidth="200dp"
            android:src="@drawable/blank_wanted_poster" />

        <LinearLayout
            android:id="@+id/fLL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fPoster"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/twYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fPipe1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:layout_toRightOf="@id/twYear"/>

                <TextView
                    android:id="@+id/twTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fPipe1"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/twCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/twGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fTagsLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/twTitleRus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#ffffffff" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Режиссер: "/>

        <TextView
            android:id="@+id/twDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/director"/>

        <TextView
            android:id="@+id/actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В главных ролях: "
            android:layout_below="@id/twDirector"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/twActors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actor"
            android:layout_alignTop="@id/actor"/>

        </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fLL1"
        android:text="Button" />

    <ImageView
        android:id="@+id/appImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />







</LinearLayout>
