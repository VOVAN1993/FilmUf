<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:paddingBottom="50dp"
    android:paddingTop="50dp">

    <ImageView
        android:id="@+id/esPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:src="@drawable/blank_wanted_poster" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cPoster"
        android:orientation="vertical">

        <TextView
            android:id="@+id/esRusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="127 часов"
            android:textSize="@dimen/font_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/esEngName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="127 Hours"
                android:textSize="@dimen/font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <TextView
                android:id="@+id/esYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2007" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=")" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Рейтинг: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8,09" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/esUserEstimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="60sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="64dp"
                android:maxWidth="64dp"
                android:src="@drawable/star"
                android:tint="@color/star_color" />

            <ImageView
                android:id="@+id/esAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:src="@drawable/blank_wanted_poster" />

            <LinearLayout
                android:id="@+id/esAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/esUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie_Shark" />

                <TextView
                    android:id="@+id/esTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:32" />

                <TextView
                    android:id="@+id/esDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 марта 2015" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>



